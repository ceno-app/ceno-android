<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/general_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_about_ouinet_protocol"
            android:title="@string/preferences_about_ouinet_protocol" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_reachability_status"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_reachability" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_upnp_status"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_upnp" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/udp_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_local_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_local_udp" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_external_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_external_udp" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_public_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_public_udp" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/bit_torrent_bootstraps_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_extra_bittorrent_bootstraps"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_extra_bitTorrent_bootstraps" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>