<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="40dp"
    android:layout_marginTop="@dimen/tap_increase_16"
    android:layout_marginBottom="@dimen/ceno_mode_margin_bottom"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rss_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textStyle="italic"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/ceno_home_card_text_color"
        tools:text="Ceno Browser Announcements"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rssAnnouncementsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:importantForAccessibility="yes"
        android:overScrollMode="never"
        tools:listitem="@layout/rss_annoucements_sub_item"
        tools:itemCount="3"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

</LinearLayout>