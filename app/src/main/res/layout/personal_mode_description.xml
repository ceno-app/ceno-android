<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/ceno_mode_margin_horizontal"
    android:layout_marginTop="@dimen/ceno_mode_margin_top"
    android:layout_marginEnd="@dimen/ceno_mode_margin_horizontal">

    <TextView
        android:id="@+id/personal_browsing_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/private_browsing_title"
        android:textColor="@color/ceno_grey_200"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personal_browsing_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ceno_personal_browsing_description"
        android:textColor="@color/ceno_grey_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/personal_browsing_title"
        app:layout_constraintTop_toBottomOf="@+id/personal_browsing_title" />

    <TextView
        android:id="@+id/tv_personal_browsing_learn_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/personal_home_learn_more"
        android:textColor="@color/ceno_grey_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/personal_browsing_description"
        app:layout_constraintTop_toBottomOf="@+id/personal_browsing_description" />
</androidx.constraintlayout.widget.ConstraintLayout>