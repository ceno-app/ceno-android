<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ceno_home_background">

    <ImageView
        android:id="@+id/wordmark"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:importantForAccessibility="no"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ceno_logo" />


    <TextView
        android:id="@+id/explainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:text="@string/failed_to_retrieve_resource"
        app:layout_constraintStart_toStartOf="@id/wordmark"
        app:layout_constraintTop_toBottomOf="@id/wordmark" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_direct_from_website"
        style="@style/PanelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_horizontal_margin"
        android:layout_marginEnd="24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="@string/ceno_sources_direct_from_website"
        android:textColor="#E71C23"
        app:drawableEndCompat="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/wordmark"
        app:layout_constraintTop_toBottomOf="@id/explainer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_via_ceno_network"
        style="@style/PanelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="@string/ceno_sources_via_ceno_network"
        android:textColor="#E71C23"
        app:drawableEndCompat="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="@id/tv_direct_from_website"
        app:layout_constraintStart_toStartOf="@id/wordmark"
        app:layout_constraintTop_toBottomOf="@+id/tv_direct_from_website" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_via_ceno_cache"
        style="@style/PanelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="@string/ceno_sources_shared_by_ceno_cache"
        android:textColor="#E71C23"
        app:drawableEndCompat="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="@id/tv_direct_from_website"
        app:layout_constraintStart_toStartOf="@id/wordmark"
        app:layout_constraintTop_toBottomOf="@+id/tv_via_ceno_network" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="@color/ceno_blue_600"
        android:text="@string/standby_try_again"
        android:textColor="@color/photonWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>