<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ceno_home_background">

        <ImageView
            android:id="@+id/wordmark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:importantForAccessibility="no"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier=".1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ceno_logo" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/failed_to_retrieve_resource_title"
            android:src="@drawable/web_page_fail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordmark" />


        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/failed_to_retrieve_resource_title"
            android:textColor="@color/ic_launcher_red_background"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <TextView
            android:id="@+id/tv_attempted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/failed_to_retrieve_resource_mechanisms_attempted"
            android:textColor="@color/fx_mobile_text_color_primary"
            app:layout_constraintStart_toStartOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_direct_from_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/ceno_sources_direct_from_website"
            android:textColor="@color/fx_mobile_text_color_primary"
            app:drawableEndCompat="@drawable/ic_error"
            app:drawableStartCompat="@drawable/shape_hexagon"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/wordmark"
            app:layout_constraintTop_toBottomOf="@id/tv_attempted" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_via_ceno_network"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/ceno_sources_via_ceno_network"
            android:textColor="@color/fx_mobile_text_color_primary"
            app:drawableEndCompat="@drawable/ic_error"
            app:drawableStartCompat="@drawable/shape_hexagon"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="@id/tv_direct_from_website"
            app:layout_constraintStart_toStartOf="@id/wordmark"
            app:layout_constraintTop_toBottomOf="@+id/tv_direct_from_website" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_via_ceno_cache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/ceno_sources_shared_by_ceno_cache"
            android:textColor="@color/fx_mobile_text_color_primary"
            app:drawableEndCompat="@drawable/ic_error"
            app:drawableStartCompat="@drawable/shape_hexagon"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="@id/tv_direct_from_website"
            app:layout_constraintStart_toStartOf="@id/wordmark"
            app:layout_constraintTop_toBottomOf="@+id/tv_via_ceno_network" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_learn_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="28dp"
            android:paddingVertical="8dp"
            android:text="@string/learn_more_title"
            android:textColor="@color/fx_mobile_text_color_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_arrow_expanded"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_via_ceno_cache" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_learn_more_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/learn_more_text_1"
            android:textColor="@color/fx_mobile_text_color_primary"
            android:textStyle="italic"
            app:drawableStartCompat="@drawable/pager_dot"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/wordmark"
            app:layout_constraintTop_toBottomOf="@id/tv_learn_more" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_learn_more_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/learn_more_text_2"
            android:textColor="@color/fx_mobile_text_color_primary"
            android:textStyle="italic"
            app:drawableStartCompat="@drawable/shape_hexagon"
            app:drawableTint="@color/fx_mobile_text_color_primary"
            app:layout_constraintEnd_toEndOf="@id/tv_direct_from_website"
            app:layout_constraintStart_toStartOf="@id/wordmark"
            app:layout_constraintTop_toBottomOf="@+id/tv_learn_more_1" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/learn_more_extra_text"
            android:textColor="@color/fx_mobile_text_color_primary"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/tv_learn_more_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>