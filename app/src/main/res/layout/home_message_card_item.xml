<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_homepage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ceno_mode_margin"
    android:backgroundTint="@color/ceno_home_card_background_tint"
    android:importantForAccessibility="noHideDescendants"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ceno_mode_title_margin">

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ceno_mode_title_size"
            app:drawableEndCompat="@drawable/ic_arrow_expanded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_card_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/ceno_mode_text_size"
            app:layout_constraintBottom_toTopOf="@+id/btn_go_to_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title" />

        <TextView
            android:id="@+id/btn_go_to_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/home_go_to_settings"
            android:textAllCaps="false"
            android:textColor="@color/ceno_home_card_public_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_card_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_text" />

        <TextView
            android:id="@+id/btn_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/learn_more_title"
            android:textAllCaps="false"
            android:textColor="@color/ceno_home_card_public_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_go_to_setting"
            app:layout_constraintStart_toStartOf="@+id/tv_card_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>