<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:id="@+id/profile_backup_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/enable_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/library_item_icon_margin_horizontal"
                android:layout_marginEnd="@dimen/library_item_icon_margin_horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textAppearance="@style/ListItemTextStyle"
                android:focusable="true"
                android:clickable="true"
                android:background="@null"
                android:text="@string/preference_enable_ouisync"
                />
            <ie.equalit.ceno.settings.profilebackup.ProfileBackupItem
                android:id="@+id/customization_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:profileBackupItemTitle="@string/preferences_profile_customization_title"
                app:profileBackupItemSubtitle="@string/preferences_profile_customization_subtitle" />
            <ie.equalit.ceno.settings.profilebackup.ProfileBackupItem
                android:id="@+id/top_sites_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:profileBackupItemTitle="@string/preferences_profile_top_sites_title"
                app:profileBackupItemSubtitle="@string/preferences_profile_top_sites_subtitle" />

            <Button
                android:id="@+id/export_profile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/preferences_export_profile_button"
                android:textAlignment="center" />

            <Button
                android:id="@+id/import_profile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/preferences_import_profile_button"
                android:textAlignment="center" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>